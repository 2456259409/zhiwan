/* pages/about/about.wxss */
.top_base{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  /* align-items: center; */
  margin: 30rpx;

}

.base_info{
  display: flex;
  flex-direction: column;
}

.user_avatar{
  width: 185rpx;
  height: 185rpx;
}

.base_mid{
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 400rpx;
  justify-content: space-around;
  align-items: center;
}

.base_mid_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 45rpx;
  margin: 30rpx;
  align-items: center;
}

.intro_btn{
  width: 30%;
}

.reset_container{
  display: flex;
  flex-direction: row-reverse;
  margin: 20rpx;
}

.reset_btn{
  background-color: white;
  width: 100rpx;
  border: 1rpx solid blue;
}

.total{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.textabout{
  font-size: 35rpx;
  border: 1rpx solid #3366FF;
}

/* 表格 */
.table {
  border: 0px solid darkgray;
  font-size: 12px;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}

.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
}